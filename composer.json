    "type":        "symfony-bundle",
    "keywords":    ["custom-assets", "assets", "symfony-bundle", "yaml"],
    "license":     "MIT",

    "authors": [
        {
            "email": "adrenalinkin@gmail.com",
            "name":  "Viktor Linkin",
            "role":  "Developer"
        }
    ],

    "require": {
        "adrenalinkin/config-helper": "~1.0,>=1.0.5",
        "php":                        "~5.6||~7.0",
        "sensio/distribution-bundle": "~3.0||~4.0||~5.0",
        "symfony/framework-bundle":   "~2.5||~3.0"
    },

    "suggest": {
        "symfony/symfony": "Allows more advanced functionality with full Symfony package"
    },

    "autoload": {
        "psr-4": {
            "Linkin\\Bundle\\CustomAssetsBundle\\": ""
        }
    }
